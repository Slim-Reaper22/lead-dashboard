    // Function to sort data by column
    function sortDataByColumn(data, columnName, direction) {
      return [...data].sort((a, b) => {
        let aValue, bValue;
        
        // Get values based on column
        switch (columnName) {
          case 'Company':
            aValue = (a.Company || '').toLowerCase();
            bValue = (b.Company || '').toLowerCase();
            break;
          case 'Site Type':
            aValue = (a['Site Type'] || '').toLowerCase();
            bValue = (b['Site Type'] || '').toLowerCase();
            break;
          case 'Address':
            aValue = (a.Address || '').toLowerCase();
            bValue = (b.Address || '').toLowerCase();
            break;
          case 'Activity Type':
            aValue = (a['Activity Type'] || '').toLowerCase();
            bValue = (b['Activity Type'] || '').toLowerCase();
            break;
          case 'Timeframe':
            aValue = (a['Timeframe'] || '').toLowerCase();
            bValue = (b['Timeframe'] || '').toLowerCase();
            break;
          case 'Estimated New Jobs':
            aValue = parseInt(a['Estimated New Jobs']) || 0;
            bValue = parseInt(b['Estimated New Jobs']) || 0;
            break;
          case 'distance':
            aValue = parseFloat(a.distance) || 0;
            bValue = parseFloat(b.distance) || 0;
            break;
          default:
            aValue = '';
            bValue = '';
        }
        
        // Compare values
        if (typeof aValue === 'number' && typeof bValue === 'number') {
          return direction === 'asc' ? aValue - bValue : bValue - aValue;
        } else {
          if (direction === 'asc') {
            return aValue < bValue ? -1 : aValue > bValue ? 1 : 0;
          } else {
            return aValue > bValue ? -1 : aValue < bValue ? 1 : 0;
          }
        }
      });
    }

